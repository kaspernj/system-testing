{
  "name": "system-testing",
  "version": "1.0.62",
  "description": "System testing with Selenium and browsers.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**"
  ],
  "keywords": [
    "system",
    "testing",
    "selenium",
    "chrome"
  ],
  "homepage": "https://github.com/kaspernj/system-testing#readme",
  "bugs": {
    "url": "https://github.com/kaspernj/system-testing/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaspernj/system-testing.git"
  },
  "license": "ISC",
  "author": "kasper@diestoeckels.de",
  "type": "module",
  "scripts": {
    "all-checks": "npm run typecheck && npm run lint && npm run prepare:dummy && npm run export:web && npm run test",
    "prepare": "npm run build",
    "prepare:dummy": "npm run build && rm -rf spec/dummy/node_modules/system-testing && mkdir -p spec/dummy/node_modules/system-testing && cp -r build package.json spec/dummy/node_modules/system-testing/",
    "build": "rm -rf build && npm run compile",
    "compile": "tsc",
    "export:web": "npm run prepare:dummy && npm --prefix spec/dummy run export:web",
    "lint": "eslint --max-warnings 0",
    "prepublishOnly": "npm run build",
    "release:patch": "node scripts/release-patch.js",
    "test": "jasmine",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -w"
  },
  "dependencies": {
    "awaitery": "^1.0.12",
    "diggerize": "^1.0.9",
    "eventemitter3": "^5.0.1",
    "htmlfy": "^1.0.0",
    "mime": "^4.0.7",
    "moment": "^2.30.1",
    "qs": "^6.14.1",
    "scoundrel-remote-eval": "^1.0.28",
    "ws": "^8.18.3",
    "ya-use-event-emitter": "^0.1.2"
  },
  "peerDependencies": {
    "expo-router": ">= 1.0.0",
    "selenium-webdriver": ">= 4.34.0"
  },
  "peerDependenciesMeta": {
    "expo-router": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jasmine": "^5.1.13",
    "@types/node": "^25.0.2",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.2.7",
    "@types/selenium-webdriver": "^4.35.4",
    "eslint": "^9.39.1",
    "eslint-plugin-jsdoc": "^62.0.0",
    "expo-router": "^6.0.21",
    "globals": "^17.0.0",
    "jasmine": "^5.13.0",
    "typescript": "^5.9.3"
  }
}
